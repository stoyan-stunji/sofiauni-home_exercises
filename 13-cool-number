#include <iostream>

using namespace std;

int main()
{
    cout << "Enter a number: \n";
    int number = 0;
    cin >> number;

    int ones = number % 10;
    number = number / 10;
    int tens = number % 10;
    number = number / 10;
    int hundreds = number % 10;

    bool areThereSameNumbers = (ones == tens) || (tens == hundreds) || (hundreds == ones);

    if (areThereSameNumbers)
    {
        cout << "You have a cool number." << endl;
    }
    else
    {
        cout << "You do not have a cool number." << endl;
    }
}

