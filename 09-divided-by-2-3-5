#include <iostream>

using namespace std;

int main()
{
    cout << "Enter a number: \n";
    int number = 0;
    cin >> number;

    bool isRight = number % 2 == 0 && number % 3 == 0 && number % 5 == 0;

    if (isRight)
    {
        cout << "The number " << number << " can be divided by 2, 3 and 5 all at once." << endl;
    }
    else
    {
        cout << "The number " << number << " cannot be divided by 2, 3 and 5 all at once." << endl;
    }

    return 0;
}

